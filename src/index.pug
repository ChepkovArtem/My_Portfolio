include ./mixins.pug

<!DOCTYPE html>
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Portfolio | main page
  body
    .wrapper
      .maincontent
        //+image('content/user.jpg', 'user-pic')
        //+icon('link', 'link-class')
        //.icon-bg

        section.main
          .container
            header.main__header
              .main__logo
                .logo ЧА
              .main__menu
                - var menu = ["Главная","Обо мне","Навыки","Работы","Отзывы","Связаться"];
                nav.menu
                  ul.menu__items
                    each item in menu
                      li.menu__item
                        a.menu__link #{item}
              .main__links
                - var icons =["insta","vk","github"];
                ul.socials
                  each item in icons
                    li.socials__item
                      a.social__link
                        +icon(item, "socials__icon")


          .main__content
            .hero-info
              .hero-info__desc
                h2.hero__subtext Личный сайт
                h2.hero__subtext веб разработчика
              .hero-info__username
                h1.hero__name Чепков
                h1.hero__name Артем


          .main__buttons
            a.scroll-down Scroll

        section.about
          .container
            .about__container
              .about__left
                .user
                  .user__avatar
                    .avatar
                      +image('content/user.jpg', 'user-pic', "user__avatar-img")
                  .user__text
                    -
                      var rows = [
                        ["Проживаю","Дубна"],
                        ["Возраст","26 лет"],
                        ["Родился","12 апреля 1993"]
                      ];
                    table.user__data
                      table.user__data-table
                        each row in rows
                          tr.user__data-row
                            each cell in row
                              td #{cell}

              .about__right
                .about__welcome-text Привет, меня зовут
                .about__username Чепков Артем
                .about__desc Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные пректы.
                .about__ps Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нем свой контент. А пока посмотрите, как тут все классно и красиво! 

        section.skills
          +image('content/skills-hand.png', 'hands')
          .container
            .skills__title
              .skills__title-text Чем я могу быть Вам полезен
              .skills__title-subtext Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нем свой контент. А пока посмотрите, как тут все классно и красиво!

            .skills__content
              -
                var items = [
                  ["Frontend",["Html5","CSS3","JavaScript","jQuery и Vue.js"]],
                  ["Workflow",["Git","Terminal","Gulp","Wedpack"]]
                ];
              ul.skills__graphic
                each row in items
                  li.skills__item
                    .skills__row
                      .skills__name #{row[0]}
                      .skills__round
                        ul.skill
                          each skill in row[1]
                            li.skill__item
                              .experience
                                svg.experience__circle
                                  .experience__title #{skill}

        section.works
          .container
            .works__title Мои Работы
            .works__content
              .slider
                .slider__display
                  img.slider__display-pic
                  .slider__display-thumbs
                    ul.slider-thumbs
                      li.slider-thumbs__item
                        a.slider-thumbs__link
                          img.slider-thumbs__pic
                      li.slider-thumbs__item
                        a.slider-thumbs__link
                          img.slider-thumbs__pic
                      li.slider-thumbs__item
                        a.slider-thumbs__link
                          img.slider-thumbs__pic
                  .slider__buttons
                    a.diraction-btn.direction-btn--next >
                    a.diraction-btn.direction-btn--prev <

                .slider__info
                  .slider__tags
                    ul.tags
                      li.tags__item Html
                      li.tags__item Css
                      li.tags__item JavaScript
                  .slider__info-text
                    h3.slider__info-title Какой-то сайт
                    .slider__info-desc Описание какого-то сайта
                  .slider__info-btns
                    a.iconend-link Посмотреть сайт

        section.reviews
          .container
            .reviews__title
              .reviews__name Что обо мне говорят
              .reviews__nav
                .reviews__navigation.reviews__nav-prev <
                .reviews__navigation.reviews__nav-next >

            .reviews__content
              ul.reviews__list
                li.reviews__item.review
                  .review__text Что-то похвальное от первого автора
                  .review__author.author
                    .author__avatar фото
                    .author__info
                      .author__name Автор 1
                      .author__work Должность 1
                li.reviews__item.review
                  .review__text Что-то похвальное от второго автора
                  .review__author.author
                    .author__avatar фото
                    .author__info
                      .author__name Автор 2
                      .author__work Должность 2 

        section.callback

        footer
          .container.footer__container
            .footer__year 2020
            .footer__author
              .footer__author-name Чепков Артем
              .footer__author-desc Личный сайт веб разработчика
            .footer__bar
              .footer__menu
                .main__menu
                  - var menu = ["Главная","Обо мне","Навыки","Работы","Отзывы","Связаться"];
                  nav.menu
                    ul.menu__items
                      each item in menu
                        li.menu__item
                          a.menu__link #{item}
              .footer__info
                .footer__social
                  .footer__social-text какой-то текст
                  .main__links
                    - var icons =["insta","vk","github"];
                    ul.socials
                      each item in icons
                        li.socials__item
                          a.social__link
                            +icon(item, "socials__icon")
                .footer__que
                  .que Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
                  .que-author Martin Golding