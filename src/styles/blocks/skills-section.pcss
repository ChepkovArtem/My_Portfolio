.skills{
    background-image: url("./../images/content/skills-bg.png");
    background-size: 100%;
    position: relative;
}
.hands{
    position: absolute;
    top: 10%;
}
.skills__title{
    margin: auto;
    padding-top: 10%;
    display: flex;
    flex-direction: column;
    width: 50%;
}
.skills__title-text{
    font-size: 30px;
    font-weight: bold;
    color: $text;
}
.skills__title-subtext{
    font-size: 16px;
    margin-top: 5%;
    color: $subtext;
}